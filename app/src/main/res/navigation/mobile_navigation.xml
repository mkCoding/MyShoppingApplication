<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myshoppingapplication.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.myshoppingapplication.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.myshoppingapplication.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_category"
        android:name="com.example.myshoppingapplication.ui.category.CategoryFragment"
        android:label="Category Fragment"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_nav_category_to_clothingCategoryFragment"
            app:destination="@id/clothingCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_shoppingList"
        android:name="com.example.myshoppingapplication.ui.shopping_list.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping_list" />
    <fragment
        android:id="@+id/nav_shopping_cart"
        android:name="com.example.myshoppingapplication.ui.shopping_cart.ShoppingCartFragment"
        android:label="Shopping Cart"
        tools:layout="@layout/fragment_shopping_cart" />
    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.myshoppingapplication.ui.history.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.myshoppingapplication.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.myshoppingapplication.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/clothingCategoryFragment"
        android:name="com.example.myshoppingapplication.ClothingCategoryFragment"
        android:label="All Clothing"
        tools:layout="@layout/fragment_clothing_category" />
</navigation>